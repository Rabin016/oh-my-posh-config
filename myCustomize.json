{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "foreground": "#45f170",
            "style": "plain",
            "template": "\uf508 {{ .UserName }} <#ffffff>in</>",
            "type": "session"
          },
          {
            "foreground": "#0CA0D8",
            "properties": {
              "folder_separator_icon": "/",
              "style": "full"
            },
            "style": "plain",
            "template": " \uf07b {{ .Path }} ",
            "type": "path"
          },
          {
            "foreground": "#4b48cf",
            "foreground_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
              "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
              "{{ if gt .Behind 0 }}#B388FF{{ end }}"
            ],
            "properties": {
              "branch_max_length": 25,
              "fetch_stash_count": true,
              "fetch_status": true,
              "fetch_upstream_icon": true
            },
            "style": "plain",
            "template": "<#ffffff>on</> {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} ",
            "type": "git"
          },
          {
            "foreground": "#5EADF2",
            "style": "plain",
            "template": "{{if .Version}}<#F3EFF5>is</> \uf487 {{.Version}} {{end}}",
            "type": "project"
          },
          {
            "foreground": "#98C379",
            "properties": {
              "fetch_version": true
            },
            "style": "plain",
            "template": "<#ffffff>via</> \ue781 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
            "type": "node"
          },
          {
            "type": "php",
            "style": "plain",
            "powerline_symbol": "\uE0B0",
            "foreground": "#4565bc",
            "template": " \ue73d {{ .Full }} "
          },
          {
            "foreground": "#c47e38",
            "leading_diamond": "\u250b",
            "properties": {
              "style": "round",
              "threshold": 0
            },
            "style": "plain",
            "template": "<#ffffff>took</> ï‰’ {{ .FormattedMs }} ",
            "type": "executiontime"
          }
        ],
        "type": "prompt"
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "#c642cd",
            "style": "plain",
            "template": "\ue3bf ",
            "type": "root"
          },
          {
            "foreground": "#CD4277",
            "style": "plain",
            "template": "# ",
            "type": "text"
          }
        ],
        "type": "prompt"
      }
    ],
    "version": 2
  }